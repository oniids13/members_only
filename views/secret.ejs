<%- include('partials/header') %>


<main class="container">
    <h2>Hi There! Do you know the secretet Passcode?</h2>
    <form action="/secret" method="POST">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" placeholder="secret passcode" name="secret">
            <label for="floatingInput">Secret Passcode</label>
          </div>
          <button type="submit" class="btn btn-primary">Enter Passcode</button>
    </form>
    <% if(msg) { %>
        <p><%= msg %></p>
    <% } %>
</main>


